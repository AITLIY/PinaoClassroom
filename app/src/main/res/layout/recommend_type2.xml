            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/type2_title_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/type2_people_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/type2_price_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/btn_selected"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type2_item4"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/type2_img4"
            android:layout_width="130dp"
            android:layout_height="76dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/type2_title_tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/type2_people_tv4"
