<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/type2_item1"
        android:layout_width="339dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"/>

    <LinearLayout
        android:id="@+id/type2_item2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/type2_img2"
            android:layout_width="130dp"
            android:layout_height="76dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/type2_title_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/type2_people_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="12sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/type2_price_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/btn_selected"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type2_item3"
        android:layout_width="match_parent"
