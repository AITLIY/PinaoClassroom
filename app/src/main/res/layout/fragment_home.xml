<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!--轮播图-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <!--存放图片的ViewPager-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/banner_vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="#0fff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--标题-->
                    <TextView
                        android:id="@+id/tv_pager_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="标题"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />

                    <!--存放小圆点的容器-->
                    <LinearLayout
                        android:id="@+id/ll_point_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </RelativeLayout>

            <!--课程分类-->
            <GridView
                android:id="@+id/class_category_gv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:gravity="center"
                android:numColumns="5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/app_bg" />

            <!--container1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_free"/>
                    <TextView
                        android:id="@+id/container1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="课程" />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_free"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/app_bg" />

            <!--container2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="485dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_recommend"/>
                    <TextView
                        android:id="@+id/container2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="课程"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_recommend"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/container2_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="更多 >"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/app_bg" />

            <!--container3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_promote"/>
                    <TextView
                        android:id="@+id/container3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text="课程"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="14dp"
                        android:background="@color/lesson_promote"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/container3_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:text="更多 >"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>