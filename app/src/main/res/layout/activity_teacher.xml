<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.yiyin.aobosh.activitys.yiYinClassroom.TeacherActivity">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/app_title_bar">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_btn_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/title_bar_text"
            android:text="亿音钢琴课堂"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/icon_bg_teacher">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.yiyin.aobosh.view.CircleImageView
                android:id="@+id/teacher_icon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/icon_tab_usericon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal|bottom">

                <TextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="鲁斯兰"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lesson_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="26"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:text="课程数量"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/student_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1123"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="2dp"
                        android:text="学习人数"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/star_ll"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@color/star_bg">

                    <ImageView
                        android:id="@+id/star_img"
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:src="@drawable/icon_tab_star1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="收藏"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/all_lesson_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/all_lesson_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部课程"
                android:textColor="@color/btn_selected" />

            <View
                android:id="@+id/all_lesson_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/btn_selected"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/teacher_detail_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/teacher_detail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="讲师介绍"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/teacher_detail_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/btn_selected"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>


    <!--课程列表-->
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lesson_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"></com.handmark.pulltorefresh.library.PullToRefreshListView>

    <WebView
        android:id="@+id/teacher_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"></WebView>

    <!--获取为空或者失败-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/not_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:src="@drawable/icon_bg_not_data"/>
        <TextView
            android:id="@+id/not_data_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="您没有任何课程信息~"/>
    </LinearLayout>

</LinearLayout>
