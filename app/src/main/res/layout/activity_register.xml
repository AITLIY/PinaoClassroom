<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/icon_bg_login"
    tools:context="com.yiyin.aobosh.activitys.login.RegisterActivity1">

    <!--顶部栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="22dp"
            android:layout_marginLeft="21dp"
            android:src="@drawable/icon_btn_back" />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_tab_appico_login"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_tab_user_lognin"/>

        <EditText
            android:id="@+id/register_phone_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="11"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:hint="请输入您的手机号"/>

    </LinearLayout>

    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_tab_lock"/>

        <EditText
            android:id="@+id/register_captcha_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="4"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:hint="请输入您的验证码"/>

        <Button
            android:id="@+id/register_get_captcha"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:textSize="10sp"
            android:text="@string/get_captcha"/>

    </LinearLayout>

    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/register_user_next"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/icon_bg_btn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="下一步"/>
    </LinearLayout>

</LinearLayout>
